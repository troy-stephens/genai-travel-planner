@using ui_frontend.Utils.Helpers;

<MudPaper Elevation="12" Style="margin-left: auto; margin-right: 20vh;width: fit-content;background: #EDF5FD">
    <MudText Class="pa-4">
            @StatusText
    </MudText>
</MudPaper>


@code {
    [Parameter]
    public string? StatusText { get; set; }

    // Method to clear content
    public void ClearContent()
    {
        StatusText = string.Empty;
        StateHasChanged();
    }
}
